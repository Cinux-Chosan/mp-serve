.swiper-item {
  width: 100%;
  height: 150px;
}

.delete-swiper {
  position: relative;
}

.weui-uploader__bd {
  padding-top: 15px;
  margin-top: -15px;
}

.weui-uploader__file{
  position: relative;
  background: black;
}

.delete-swiper {
  width: 30px;
  height: 30px;
  position: absolute;
  top: -15px;
  right: -15px;
  text-align: center;
  line-height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-swiper::before {
  content: '\e629';
  z-index: 1;
  position: relative;
}

.delete-swiper::after {
  content: '';
  display: inline-block;
  width: 0;
  height: 0;
  border: 15px solid #fff;
  border-right: 0;
  position: absolute;
  top: -3px;
  left: 3px;
  border-radius: 15px 0 0 15px; 
}

